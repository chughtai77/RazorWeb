@page
@model RazorWebApp.Pages.Categories.IndexModel

<partial name="_NotificationView"; />

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary"> Category list </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-page="create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; Add New Category
            </a>
        </div>
    </div>
    <br/></br>

    <table class="table table-bordered table-striped" style:100%">
        <thead>
            <tr>
                <th>
                   Category Name 
                </th>
                <th>
                    Dispaly Order
                </th>
                <th class="text-center">Edit</th>
                <th class="text-center">Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var o in Model.categories)
            {
                <tr>
                    <td width="50%">@o.Name</td>
                    <td width="50%">@o.DispalyOrder</td>
                    <td>
                        <a asp-page="Edit" asp-route-id="@o.Id" class="btn btn-primary mx-2">
                            <i class="bi bi-pencil-square"></i>
                        </a>
                    </td>
                    <td>
                        <a asp-page="Delete" asp-route-id="@o.Id" class="btn btn-danger mx-2">
                            <i class="bi bi-trash3"></i>
                        </a>
                    </td>
                </tr>
            }
          
        </tbody>

    </table>
    

</div>
